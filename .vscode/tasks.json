{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build Debug",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build --config Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "build Release",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build --config Release",
            "group": "build",
            "problemMatcher": ["$msCompile"]
        }
    ]
}